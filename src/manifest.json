{
    "name": "Thread in same folder",
    "description": "Runs after junk classification and filtering to make sure a message lands in the same folder as its parent in a thread",
    "version": "1.0",
    "author": "Petros Koutsolampros",
    "applications": {
        "gecko": {
            "id": "threadInSameFolder@pklampros.io",
            "strict_min_version": "78.0"
        }
    },
    "icons": {
      "128": "images/thread-in-folder-128px.png",
      "64": "images/thread-in-folder-64px.png",
      "32": "images/thread-in-folder-32px.png",
      "16": "images/thread-in-folder-16px.png"
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "messagesMove"
    ],
    "manifest_version": 2
}
